<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='recolecta_book_category_action' model='ir.actions.act_window'>
        <field name="name">Book Categories</field>
        <field name="res_model">recolecta.book.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Book Categories" id="recolecta_book_category_menu" parent="recolecta_base_menu" action="recolecta_book_category_action"/>

    <!-- Form View -->
    <record id="recolecta_book_category_view_form" model="ir.ui.view">
        <field name="name">recolecta Categories Form</field>
        <field name="model">recolecta.book.category</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="parent_id"/>
                    </group>
                </group>
                <group>
                    <field name="child_ids"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="recolecta_book_category_view_tree" model="ir.ui.view">
        <field name="name">recolecta Book List</field>
        <field name="model">recolecta.book.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

</odoo>
