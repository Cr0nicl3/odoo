<odoo>
    <data>

        <!-- Defino el report -->
        <report
            id="report_colectas"
            model="recolecta.colecta.category"
            string="Collecion report"
            name="my_recolecta.report_colectas_view"
            file="my_recolecta.report_colectas"
            report_type="qweb-html" />

        <!-- Lo mismo en PDF -->
        <report
            id="report_colectas_pdf"
            model="recolecta.colecta.category"
            string="Collecion report (PDF)"
            name="my_recolecta.report_colectas_view"
            file="my_recolecta.report_colectas"
            report_type="qweb-pdf" />            

        <!-- Defino la plantilla para el report -->
        <template id="report_colectas_view">
            <t t-call="web.html_container">
                <!-- Para cada Repartidor -->
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="container-fluid">
                                <h2 class="text-center mt32">
                                    Category:
                                    <span t-field="doc.name"/>
                                </h2>
                                <div class="row mt32 mb32">
                                    <div class="col-7">
                                    </div>
                                    <div class="col-3">
                                        <p class="text-right">
                                        Description:</p>
                                    </div>
                                    <div class="col-2">
                                        <p class="text-right">
                                            <span t-field="doc.description"/>
                                        </p>
                                    </div>
                                </div>

                                <div class="row mt32 mb32 border p-2">
                                    <div class="col-12">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>colectas</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr t-foreach="doc.colecta_ids" t-as="colecta">
                                                    <td><span t-field="colecta.name"/></td>
                                                    <td>
                                                        <ul>
                                                            <li t-foreach="colecta.Deliver_ids" t-as="Deliver">
                                                               <span t-field="Deliver.name"/>
                                                            </li>
                                                        </ul>
                                                    </td>
                                                    <td>
                                                        <!-- Ejemplo de if -->
                                                        <t t-if="colecta.state == 'Cancelled'">Not checked</t>
                                                        <t t-else=""></t>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>