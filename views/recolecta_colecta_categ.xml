<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='recolecta_colecta_category_action' model='ir.actions.act_window'>
        <field name="name">Collection categories</field>
        <field name="res_model">recolecta.colecta.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Collection categories" id="recolecta_colecta_category_menu" parent="recolecta_base_menu" action="recolecta_colecta_category_action"/>

    <!-- Form View -->
    <record id="recolecta_colecta_category_view_form" model="ir.ui.view">
        <field name="name">Recollection categories Form</field>
        <field name="model">recolecta.colecta.category</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="parent_id"/>
                    </group>
                </group>
                <group>
                    <field name="child_ids"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="recolecta_colecta_category_view_tree" model="ir.ui.view">
        <field name="name">Collection list</field>
        <field name="model">recolecta.colecta.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

</odoo>
